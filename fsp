############# Main body ############
main_options(){
    case "$sound_command" in
        so)
            play "$audio_dir/so_audio.mp3"
        ;;

        so_fluffy)
            echo ">'so_fluffy!'"
            play "$audio_dir/so_fluffy_audio.wav"
        ;;

        fluffy | fluffy!)
            play "$audio_dir/fluffy_short.wav"
        ;;

        its_so_fluffy | isf)
            play "-v 4 $audio_dir/its_so_fluffy.mp3"
        ;;

        its_so_fluffy_im_gonna_die | so_fluffy_im_gonna_die | sfigd | isfigd | die)
            play "-v 4 $audio_dir/so_fluffy_im_gonna_die.mp3"
        ;;

        always_can_count_on_you | always_could_count_on_you | accoy)
            play "-v 7 $audio_dir/always_could_count_on_you.mp3"
        ;;

        owe | oowee | oooweee)
            afplay -v 3 $audio_dir/oooweee.mp3 \
            & \
            exit
        ;;
        
        hihi | worms | hh)
            afplay $audio_dir/hihi_worms.mp3 \
            & \
            exit
        ;;

        plumbus | pb | p)
            afplay -v 2 $audio_dir/plumbus.mp3 \
            & \
            exit
        ;;

        always_wondered | awhpgm | aw | plumbuses)
            afplay $audio_dir/always_wondered.mp3 \
            & \
            exit
        ;;

        come_back | cb)
            afplay $audio_dir/come_back.mp3 \
            & \
            exit
        ;;

        come_back_slow | cbs)
            afplay $audio_dir/come_back_slow.mp3 \
            & \
            exit
        ;;

        come_back_strong | cbst | c)
            afplay $audio_dir/come_back_strong.mp3 \
            & \
            exit
        ;;

        raccoon | r)
            afplay $audio_dir/raccoon.mp3 \
            & \
            exit
        ;;

        blintzes)
            afplay $audio_dir/blintzes.mp3 \
            & \
            exit
        ;;

        puree)
            afplay $audio_dir/puree.mp3 \
            & \
            exit
        ;;

        rummikub | remi | rumi)
            afplay $audio_dir/rummikub.mp3 \
            & \
            exit
        ;;

        papaya | pa)
            afplay $audio_dir/papaya.mp3 \
            & \
            exit
        ;;

        papoi)
            afplay $audio_dir/papoi.mp3 \
            & \
            exit
        ;;

        papoi2)
            afplay $audio_dir/papoi2.mp3 \
            & \
            exit
        ;;

        i_want_to_be_there_yes | iwtbt | there | t1)
            afplay $audio_dir/i_want_to_be_there_yes.mp3 \
            & \
            exit
        ;;

        i_want_to_be_there | there2 | t2)
            afplay $audio_dir/i_want_to_be_theree.mp3 \
            & \
            exit
        ;;

        there3 | t3)
            afplay $audio_dir/i_want_to_be_there.mp3 \
            & \
            exit
        ;;

        i_am_here | here | iah)
            afplay $audio_dir/i_am_here.mp3 \
            & \
            exit
        ;;

        dont_want_to_be_here | here_not | not_here | nh | dwtbh | idwtbh)
            afplay $audio_dir/dont_want_to_be_here.mp3 \
            & \
            exit
        ;;

        still_here | sh)
            afplay $audio_dir/still_here.mp3 \
            & \
            exit
        ;;

        goody | good | g)
            afplay $audio_dir/goody.mp3 \
            & \
            exit
        ;;

        where_is_the_money_lebowski | where_is_the_money | lebowski | money)
            afplay $audio_dir/where_is_the_money_lebowski.mp3 \
            & \
            exit
        ;;

        team_that_i_build | team)
            afplay $audio_dir/team_builder.mp3 \
            & \
            exit
        ;;

        miluim)
            afplay $audio_dir/miluim.mp3 \
            & \
            exit
        ;;

        matan | purim)
            afplay -v 0.3 $audio_dir/matan.mp3 \
            & \
            exit
        ;;

        what_do_you_want | wdyw)
            afplay -v 0.3 $audio_dir/what_do_you_want.mp3 \
            & \
            exit
        ;;

        story)
            afplay -v 0.5 $audio_dir/story.mp3 \
            & \
            exit
        ;;

        crickets | crcr)
            afplay $audio_dir/crickets.mp3 \
            & \
            exit
        ;;

        floccinaucinihilipilification | floc)
            afplay $audio_dir/floccinaucinihilipilification.mp3 \
            & \
            exit
        ;;

        ding_dong | ding | d)
            afplay $audio_dir/ding_dong.mp3 \
            & \
            exit
        ;;

        hello | h)
            afplay $audio_dir/hello.mp3 \
            & \
            exit
        ;;

        free_book | fb)
            afplay $audio_dir/free_book.mp3 \
            & \
            exit
        ;;

        spider_pig | sp)
            afplay $audio_dir/spider_pig.mp3 \
            & \
            exit
        ;;

        ba_dum_tss | bdt | drums)
            afplay $audio_dir/ba_dum_tss.mp3 \
            & \
            exit
        ;;

        seinfeld | seinfeld_theme)
            play $audio_dir/seinfeld_theme.mp3
        ;;

        lemon | give_me_lemons | give_me_lemon)
            give_me_lemon
            exit
        ;;

        bean | give_me_beans | give_me_bean)
            give_me_bean
            exit
        ;;

        *)
            echo No valid operation provided!
    esac
}


update_audio_dir
check_audio_dir
control_options $1
sound_options $2
main_options $1
