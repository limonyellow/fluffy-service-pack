############# Main body ############
main_options() {
  case "$1" in
  so)
    afplay $audio_dir/so_audio.mp3 \
      &
    exit
    ;;

  so_fluffy)
    echo ">'so_fluffy!'"
    afplay $audio_dir/so_fluffy_audio.wav \
      &
    exit
    ;;

  fluffy | fluffy!)
    afplay $audio_dir/fluffy_short.wav \
      &
    exit
    ;;

  its_so_fluffy | isf)
    afplay $audio_dir/its_so_fluffy.mp3 \
      &
    exit
    ;;

  its_so_fluffy_im_gonna_die | so_fluffy_im_gonna_die | sfigd | isfigd | die)
    afplay $audio_dir/so_fluffy_im_gonna_die.mp3 \
      &
    exit
    ;;

  always_can_count_on_you | always_could_count_on_you | accoy)
    afplay $audio_dir/always_could_count_on_you.mp3 \
      &
    exit
    ;;

  owe | oowee | oooweee)
    afplay $audio_dir/oooweee.mp3 \
      &
    exit
    ;;

  hihi | worms | hh)
    afplay $audio_dir/hihi_worms.mp3 \
      &
    exit
    ;;

  plumbus | pb | p)
    afplay $audio_dir/plumbus.mp3 \
      &
    exit
    ;;

  always_wondered | awhpgm | aw | plumbuses)
    afplay $audio_dir/always_wondered.mp3 \
      &
    exit
    ;;

  come_back | cb)
    afplay $audio_dir/come_back.mp3 \
      &
    exit
    ;;

  come_back_slow | cbs)
    afplay $audio_dir/come_back_slow.mp3 \
      &
    exit
    ;;

  come_back_strong | cbst | c)
    afplay $audio_dir/come_back_strong.mp3 \
      &
    exit
    ;;

  raccoon | r)
    afplay $audio_dir/raccoon.mp3 \
      &
    exit
    ;;

  blintzes)
    afplay $audio_dir/blintzes.mp3 \
      &
    exit
    ;;

  puree)
    afplay $audio_dir/puree.mp3 \
      &
    exit
    ;;

  rummikub | remi | rumi)
    afplay $audio_dir/rummikub.mp3 \
      &
    exit
    ;;

  papaya | pa)
    afplay $audio_dir/papaya.mp3 \
      &
    exit
    ;;

  papoi)
    afplay $audio_dir/papoi.mp3 \
      &
    exit
    ;;

  papoi2)
    afplay $audio_dir/papoi2.mp3 \
      &
    exit
    ;;

  i_want_to_be_there_yes | iwtbt | there | t3)
    afplay $audio_dir/i_want_to_be_there_yes.mp3 \
      &
    exit
    ;;

  i_want_to_be_there | there2 | t2)
    afplay $audio_dir/i_want_to_be_theree.mp3 \
      &
    exit
    ;;

  there3 | t3)
    afplay $audio_dir/i_want_to_be_there.mp3 \
      &
    exit
    ;;

  i_am_here | here | iah)
    afplay $audio_dir/i_am_here.mp3 \
      &
    exit
    ;;

  dont_want_to_be_here | here_not | not_here | nh | dwtbh | idwtbh)
    afplay $audio_dir/dont_want_to_be_here.mp3 \
      &
    exit
    ;;

  still_here | sh)
    afplay $audio_dir/still_here.mp3 \
      &
    exit
    ;;

  goody | good | g)
    afplay $audio_dir/goody.mp3 \
      &
    exit
    ;;

  where_is_the_money_lebowski | where_is_the_money | lebowski | money)
    afplay $audio_dir/where_is_the_money_lebowski.mp3 \
      &
    exit
    ;;

  crickets | crcr)
    afplay $audio_dir/crickets.mp3 \
      &
    exit
    ;;

  lemon | give_me_lemons | give_me_lemon)
    give_me_lemon
    exit
    ;;

  bean | give_me_beans | give_me_bean)
    give_me_bean
    exit
    ;;

  *)
    echo No valid operation provided!
    ;;
  esac
}

update_audio_dir
check_audio_dir
control_options $1
main_options $1
