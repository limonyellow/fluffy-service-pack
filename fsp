#!/usr/bin/env bash

########################
# Author: Limony
# Date: 2023-01-01
###########################

unset github_username dir repo license_url

script_name=$(basename "$0")
dir=$(dirname "$0";)
audio_dir=$dir"/audio"
version="0.0.2"

help() {
    cat <<EOF
This script helps you create fluffy sounds.

usage: $script_name <sound_name> [ -h | --help | -v | --version]

Examples:
    $script_name so
    $script_name so_fluffy
EOF
}

# General #
case "$1" in
    -h | --help)
    help
    exit
    ;;
    -v | --version)
    echo ${version}
    exit
    ;;
esac

# Ascii functions #
